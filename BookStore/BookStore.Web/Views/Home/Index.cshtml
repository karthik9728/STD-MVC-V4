@using BookStore.Web.ViewModels
@model IEnumerable<BookViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row mt-2">
    @foreach (var item in Model)
    {

        <div class="col-md-3">
            <div class="card" style="width: 12rem;">
                <img class="card-img-top" src="~/Images/@item.PictureUri" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <h6 class="card-title"><i class="fas fa-rupee-sign"></i> @item.Price </h6>

                    <a asp-action="Details" asp-controller="Home" asp-route-id="@item.BookId" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>

    }
</div>