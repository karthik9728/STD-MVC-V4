@using BookStore.Web.ViewModels

@model BookWithCategory

<form asp-action="Details" method="Post">
    <div class="row">
        <div class="col-md-6">
            <img src="~/Images/@Model.PictureUri" class="img img-thumbnail" />
        </div>
        <div class="col-md-6">

            <dl class="row form-group">
                <dt class="col-sm-2">
                    <input type="hidden" asp-for="@Model.BookId" />

                </dt>
                <dd class="col-sm-10">

                </dd>
                <dt class="col-sm-2">
                    <input type="hidden" asp-for="@Model.Name" />
                    <label asp-for="@Model.Name" class="font-weight-bolder"></label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    <label asp-for="@Model.ISBNNumber"> ISBN : </label>
                </dt>
                <dd class="col-sm-10">
                    <label asp-for="@Model.ISBNNumber">@Model.ISBNNumber</label>
                </dd>
                <dt class="col-sm-2">
                    <input type="hidden" asp-for="@Model.Price" />
                    <label asp-for="@Model.Price" class="font-weight-bolder"></label>
                </dt>
                <dd class="col-sm-10">
                    <i class="fas fa-rupee-sign"></i>   @Html.DisplayFor(model => model.Price)
                </dd>
            </dl>
            <div class="row form-group">

                <label asp-for="@Model.Quantity" class="font-weight-bolder">Quantity : </label>
                <input asp-for="@Model.Quantity" class="form-control w-100" />
            </div>
            <div class="row form-group mt-2">
                <input type="Submit" value="Add to Cart" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

